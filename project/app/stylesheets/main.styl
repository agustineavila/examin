body
  background gray;
  color black;
  font-family Arial
  font-size 16px
header
  background #A8AAB5
  border-bottom 5px solid #505050
  position relative
  height 50px
  .header-container
    color black
    display inline-block
    .logo-chico
      img
        padding 7px 5px 7px 10px
        border-right 3px solid gray
    nav
      display inline-block
      position absolute
      right 55px
      top 15px
      .menu
        margin 0
        //text-align right
        white-space nowrap
        li
          display inline-block
          a
            border-right 2px solid gray
            border-left 2px solid gray
            color #282828
            display inline-block
            margin 0 0.5em 0 0.5em
            padding 0 5px 0 5px
            text-decoration none
  .login
    .login-boton
      background  gray
      border 1px solid #505050
      border-radius 5px
      color white
      display inline-block
      padding 2px 2px 2px 2px
      position absolute
      text-decoration none
      top 14px
      right 10px
.examin-imagen-grande
  img
    border-bottom 5px solid #505050
footer
  font-size 12px
  text-align center
